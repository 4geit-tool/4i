.template 1
.cached = cache_open("run.sh")
#!/bin/bash

.copyleft()

pushd $(global.build_path:)

.if defined(project.python_version)
virtualenv$(project.python_version) .
source bin/activate
.endif

pushd $1

\./run.sh

popd

.if defined(project.python_version)
deactivate
.endif

popd
.
.cache_close(cached)
.chmod('+x', '$(global.build_path:)/run.sh')
.
.endtemplate